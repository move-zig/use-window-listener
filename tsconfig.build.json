{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noEmit": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.mts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.mts",
    "**/*.spec.tsx",
  ]
}